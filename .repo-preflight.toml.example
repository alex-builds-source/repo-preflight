# Example repo-preflight config

[preflight]
# quick | full | ci
profile = "full"

# Optional rule packs: oss-library | internal-service | cli-tool
# rule_pack = "oss-library"

strict = false
no_gitleaks = false

# Diff behavior:
# - manual: use explicit diff_base/diff_target when set
# - pr: auto-resolve base/target from CI env vars with fallback
# diff_mode = "manual"
# pr_base_ref = "origin/main"

# Optional refs for diff-aware checks
# diff_base = "origin/main"
diff_target = "HEAD"

# Warn thresholds
max_tracked_file_kib = 5120
max_history_blob_kib = 5120

# Maximum history objects scanned by history_large_blobs
history_object_limit = 20000

[checks]
# Optional explicit adjustments to profile check list
include = []
exclude = []

[severity_overrides]
# Example: escalate missing LICENSE from warn -> fail
# license_present = "fail"
